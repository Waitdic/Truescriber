@model Truescriber.BLL.Services.User.IdentityModels.LoginViewModel

<h2 align="center" >Login to app</h2>
<div>
    <form method="post" asp-controller="Account" asp-action="Login">
        <div align="center" asp-validation-summary="ModelOnly"></div>
        <div>
            <div align="center">
                <div align="center">
                    <label asp-for="Login"></label><br />
                    <input asp-for="Login" />
                </div>
                <span asp-validation-for="Login"></span>
                <br />
            </div>

            <div align="center">
                <div align="center">
                    <label asp-for="Password"></label><br />
                    <input asp-for="Password" />
                </div>
                <span asp-validation-for="Password"></span>
                <br />
            </div>
        </div>
        <br />
        <div align="center">
            <input class="btn-danger" type="submit" value="Log in" />
        </div>
    </form>
</div>